<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kanfa.news.info.mapper.ActivityMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.kanfa.news.info.entity.Activity" id="activityMap">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="image" column="image"/>
        <result property="startTime" column="start_time"/>
        <result property="endTime" column="end_time"/>
        <result property="type" column="type"/>
        <result property="status" column="status"/>
        <result property="pageView" column="page_view"/>
        <result property="isDelete" column="is_delete"/>
        <result property="createdUid" column="created_uid"/>
        <result property="createdTime" column="created_time"/>
        <result property="rule" column="rule"/>
    </resultMap>


    <!-- 新增建言/投票活动 -->
    <insert id="addVoteActivity"  parameterType="com.kanfa.news.info.entity.Activity" keyColumn="id" useGeneratedKeys="true" keyProperty="id">
                        INSERT INTO kf_activity (
                        title,
                        image,
                        start_time,
                        end_time,
                        status,
                        type,
                        is_delete,
                        created_uid,
                        created_time,
                        rule,
                        dayrule
                    )
                    VALUES
                        (
                            #{title},
                            #{image},
                            #{startTime},
                            #{endTime},
                            #{status},
                            #{type},
                            #{isDelete},
                            #{createdUid},
                            #{createdTime},
                            #{rule},
                            #{dayRule}
                        )
    </insert>


    <!-- 建言/投票活动的分页及搜索 -->
    <select id="getVoteActivityPage" resultType="com.kanfa.news.info.vo.admin.activity.VoteActivityInfo">
        SELECT
        ka.id,
        ka.title,
        kau.`name`,
        ka.start_time startTime,
        ka.end_time endTime,
        ka.page_view pv,
        kav.id activityVoteId
        FROM kf_activity ka
        LEFT JOIN base_user kau ON ka.created_uid = kau.id
        LEFT JOIN kf_activity_vote kav ON kav.activity_id = ka.id
        <where>
            <if test="title!=null and title != '' ">
                AND ka.title LIKE CONCAT('%',#{title},'%')
            </if>
            <if test="isDelete!=null ">
                AND ka.is_delete=#{isDelete}
            </if>
            <if test="type!=null">
                AND ka.type=#{type}
            </if>
        </where>
        ORDER BY ka.id DESC
    </select>

