<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kanfa.news.info.mapper.LiveCourtMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.kanfa.news.info.entity.LiveCourt" id="liveCourtMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="courtLevel" column="court_level"/>
        <result property="avatar" column="avatar"/>
        <result property="provinceId" column="province_id"/>
        <result property="provinceName" column="province_name"/>
        <result property="cityId" column="city_id"/>
        <result property="cityName" column="city_name"/>
        <result property="liveCount" column="live_count"/>
        <result property="createUid" column="create_uid"/>
        <result property="createTime" column="create_time"/>
        <result property="updateUid" column="update_uid"/>
        <result property="updateTime" column="update_time"/>
        <result property="key" column="key"/>
        <result property="pkey" column="Pkey"/>
        <result property="encourt" column="EnCourt"/>
        <result property="stat" column="stat"/>
    </resultMap>


    <select id="getPage" resultType="com.kanfa.news.info.vo.admin.live.LiveCourtInfo">
                SELECT
                    xlc.id,
                    xlc.avatar,
                    xlc.`name`,
                    xlc.court_level courtLevel,
                    xlc.live_count liveCount,
                    xau.`name` updateUser
                    xlc.update_time updateTime
                FROM
                    kf_live_court xlc
                LEFT JOIN base_user xau ON xlc.update_uid = xau.id
                WHERE
                    xlc.stat = 1
                ORDER BY
                    xlc.id DESC,xlc.update_time DESC
    </select>


    <select id="getSearchPage" parameterType="java.lang.String" resultType="com.kanfa.news.info.vo.admin.live.LiveCourtInfo">
                SELECT
                    xlc.id,
                    xlc.avatar,
                    xlc.`name`,
                    xlc.court_level courtLevel,
                    xlc.live_count liveCount,
                    xau.`name` updateUser,
                    xlc.update_time updateTime
                FROM
                    kf_live_court xlc
                LEFT JOIN base_user xau ON xlc.update_uid = xau.id
                WHERE
                    xlc.stat = 1 AND  xlc.`name` LIKE CONCAT('%',#{name},'%' )
                ORDER BY
                    xlc.id DESC,xlc.update_time DESC
    </select>


    <select id="selectOneLiveCourt"  parameterType="java.lang.Integer" resultType="com.kanfa.news.info.vo.admin.live.LiveCourtInfo">
        SELECT
        xlc.id,
        xlc.avatar,
        xlc.`name`,
        xlc.court_level courtLevel,
        xlc.live_count liveCount,
        xlc.create_uid updateUser,
        xlc.update_time updateTime,
        xlc.province_id provinceId
        FROM
        kf_live_court xlc
        LEFT JOIN base_user xau ON xlc.update_uid = xau.id
        WHERE  xlc.id = #{id}
    </select>

    <select id="getLevelCourtList" resultType="com.kanfa.news.info.vo.admin.live.LiveCourtInfo">
        SELECT
          lc.id,
          lc.`name`
          FROM kf_live_court lc
          WHERE
        <choose>
            <when test="stat != null">
                 lc.stat = #{stat} and
            </when>
        </choose>
        <choose>
            <when test="province_id != null">
                 lc.province_id = #{province_id} and
            </when>
            <otherwise>
                 lc.province_id = 11 and
            </otherwise>
        </choose>
        <choose>
            <when test="court_level != null and court_level > 0 ">
                 lc.court_level = #{court_level}
            </when>
            <otherwise>
                 lc.court_level IN (1,2,3)
            </otherwise>
        </choose>
        order by lc.id desc
    </select>
</mapper>