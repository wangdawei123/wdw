<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kanfa.news.app.mapper.LiveVideoBindMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.kanfa.news.app.entity.LiveVideoBind" id="liveVideoBindMap">
        <result property="id" column="id"/>
        <result property="cid" column="cid"/>
        <result property="bindId" column="bind_id"/>
        <result property="fromType" column="from_type"/>
        <result property="sort" column="sort"/>
        <result property="sorttime" column="sorttime"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <result property="createUid" column="create_uid"/>
        <result property="updateUid" column="update_uid"/>
    </resultMap>

    <!-- 得到绑定信息来自于直播表 -->
    <select id="getContentBind" resultType="com.kanfa.news.app.vo.admin.live.LiveVideoBindInfo">
        SELECT
        xlv.bind_id id,
        xl.title title,
        xlv.from_type fromType,
        xau.nickname updateUser,
        xl.update_time updateTime
        FROM
        kf_live_video_bind xlv
        LEFT JOIN kf_live xl ON xlv.bind_id = xl.id
        LEFT JOIN kf_admin_user xau ON xl.update_uid = xau.id
        WHERE
        xlv.cid = #{liveId} AND xlv.from_type IN (1,2)
        ORDER BY xlv.sort DESC,xlv.bind_id DESC,xlv.create_time DESC
    </select>

    <!-- 直播的搜索 -->
    <select id="getLiveSearchPage" resultType="com.kanfa.news.app.vo.admin.live.LiveVideoBindInfo">
                 SELECT
                    kl.title,
                    kl.id
                FROM
                    kf_live kl
				LEFT JOIN kf_live_video_bind klvb ON klvb.bind_id = kl.id
                WHERE
                    kl.id NOT IN (
                        SELECT
                            klvb2.bind_id
                        FROM
                            kf_live_video_bind klvb2
                        WHERE
                            klvb2.cid = #{liveId}
                    )
                AND kl.title LIKE CONCAT('%',#{title},'%' )
                ORDER BY kl.id DESC,kl.update_time DESC
    </select>


    <!-- 视频的搜索 -->
    <select id="getVideoSearchPage" resultType="com.kanfa.news.app.vo.admin.live.LiveVideoBindInfo">
            SELECT
                kl.title,
                kl.id
            FROM
                kf_content kl
            LEFT JOIN kf_live_video_bind klvb ON klvb.bind_id = kl.id
            WHERE
                kl.id NOT IN (
                    SELECT
                        klvb2.bind_id
                    FROM
                        kf_live_video_bind klvb2
                    WHERE
                        klvb2.cid = #{liveId}
                )
            AND kl.title LIKE CONCAT(
                '%',
                #{title},'%' )
            AND kl.content_type = 4
            ORDER BY kl.id DESC,kl.update_time DESC
    </select>

    <!-- 查询直播关联内容表中的sort的最大值 -->
    <select id="getMaxSort" resultType="java.lang.Integer">
        SELECT MAX(sort)
        FROM  kf_live_video_bind
    </select>


    <!-- 查询绑定内容 -->
    <select id="getLiveVideoBind" resultType="com.kanfa.news.app.entity.LiveVideoBind">
        SELECT
        kcb.id,
        kcb.sort sort
        FROM
        kf_live_video_bind kcb
        <where>
            <if test="ids!=null and ids.size()>0">
                kcb.bind_id IN
                <foreach collection="ids" item="bindId" open="(" close=")" separator=",">
                    #{bindId}
                </foreach>
            </if>
            <if test="contentId!=null">
                AND kcb.cid=#{contentId}
            </if>
        </where>
        ORDER BY field
        <foreach collection="ids" item="bindId" open="(kcb.bind_id," close=")" separator=",">
            #{bindId}
        </foreach>
    </select>
</mapper>