<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kanfa.news.app.mapper.ContentBurstMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.kanfa.news.app.entity.ContentBurst" id="contentBurstMap">
        <result property="id" column="id"/>
        <result property="burstId" column="burst_id"/>
        <result property="contentId" column="content_id"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <select id="selectContentByBurst" resultType="com.kanfa.news.app.vo.admin.info.ContentInfo">
      select
                c.id,
                c.title,
                c.content_type contentType,
                c.view_count viewCount,

                au.nickname createUser
            from
                kf_content_burst cb
                LEFT JOIN kf_content c ON cb.content_id=c.id
                LEFT JOIN  kf_admin_user au ON au.id = c.create_uid
            <where>
                <if test="entity.burstId != null">
                    cb.burst_id=#{entity.burstId}
                </if>
                <if test="entity.status != null">
                   AND cb.status=#{entity.status}
                </if>
            </where>
    </select>
</mapper>