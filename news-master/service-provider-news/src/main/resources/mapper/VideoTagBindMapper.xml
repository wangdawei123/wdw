<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kanfa.news.info.mapper.VideoTagBindMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.kanfa.news.info.entity.VideoTagBind" id="videoTagBindMap">
        <result property="id" column="id"/>
        <result property="videoTagId" column="video_tag_id"/>
        <result property="videoId" column="video_id"/>
    </resultMap>

    <delete id="deleteTagByCid" parameterType="java.lang.Integer">
          DELETE FROM kf_video_tag_bind WHERE <if test="id!=null">video_id=#{id}</if>
    </delete>


    <select id="seletByVideoId" resultType="com.kanfa.news.info.entity.VideoTagBind">
    SELECT * FROM    kf_video_tag_bind kvtb
    WHERE  kvtb.video_id =#{videoId}
    </select>

</mapper>