<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kanfa.news.user.mapper.SettingMapper">

	<!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.kanfa.news.user.entity.Setting" id="settingMap">
        <result property="name" column="name"/>
        <result property="value" column="value"/>
        <result property="desc" column="desc"/>
    </resultMap>
    <select id="selectSettingByName" resultMap="settingMap">
            SELECT
            *   FROM kf_setting
        WHERE  name =  #{name}
    </select>

    <update id="updateSettingByName" parameterType="com.kanfa.news.user.entity.Setting">
        UPDATE kf_setting
        <set>
            `value`=#{value},`desc`=#{desc}
        </set>
         WHERE `name`=#{name}
    </update>

    <insert id="insertSetting" parameterType="com.kanfa.news.user.entity.Setting" keyProperty="id" useGeneratedKeys="true">
        INSERT INTO `kf_setting`(
                                  `name`,
                                  `value`,
                                  `desc`)
        VALUES (
                  #{name},
                  #{value},
                  #{desc})
    </insert>
</mapper>